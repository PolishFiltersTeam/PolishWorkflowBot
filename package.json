{
  "name": "probot-workflow",
  "version": "1.0.0",
  "description": "workflow automation",
  "license": "ISC",
  "author": "Brandon Keepers",
  "repository": "https://github.com/probot/workflow",
  "scripts": {
    "start": "probot run ./index.js",
    "test": "jest && standard"
  },
  "dependencies": {
    "handlebars": "^4.0.6",
    "probot": "^4.0.0"
  },
  "engines": {
    "node": ">= 7.7.0",
    "npm": ">= 4.0.0"
  },
  "devDependencies": {
    "eslint-plugin-markdown": "^1.0.0-beta.7",
    "jest": "^21.2.1",
    "localtunnel": "^1.8.3",
    "standard": "^10.0.3"
  },
  "jest": {
    "testMatch": [
      "**/test/**/*.js?(x)",
      "**/?(*.)(spec|test).js?(x)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/test/fixtures/",
      "<rootDir>/test/setup.js"
    ]
  },
  "standard": {
    "env": [
      "jest"
    ],
    "globals": [
      "on",
      "include",
      "contents"
    ],
    "plugins": [
      "markdown"
    ]
  }
}
